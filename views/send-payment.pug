extends layout4

block headContent
	title Send Payment

block breadcrumb
	li.breadcrumb-item
		a(href='/') Home
	li.breadcrumb-item Tools
	li.breadcrumb-item Send Payment
	
block content
	h1.h3 Send Payment
	hr

	if (createInvoiceResponse != null)
		div.alert.alert-success
			h3.h5 Success

			div.mb-3 Your invoice was created successfully!

			div.form-group
				label.font-weight-bold(for="payment_request") Payment Request
				div.input-group
					textarea.form-control.text-monospace #{createInvoiceResponse.payment_request}

			div.mb-3
				span.font-weight-bold Hash (hex)
				br
				span.text-monospace #{createInvoiceResponse.r_hash_hex}

			div.mb-3
				span.font-weight-bold Hash (base64)
				br
				span.text-monospace #{createInvoiceResponse.r_hash_base64}
			
			if (false)
				pre
					code.json.bg-light #{JSON.stringify(createInvoiceResponse, null, 4)}

	if (!session.admin)
		- var loginRequiredNote = "allow you to create a new invoice.";
		include includes/login-required-alert.pug

	else

		form(method="post")
			div.form-group
				label(for="memo") Target Node Public Key
				input.form-control.form-control-lg.text-monospace(type="text" id="destPubkey" name="destPubkey" value=destPubkey)

			if (destPubkey)
				div.card.text-monospace.mb-3.bg-light
					div.card-body
						- var card_node_pubkey = destPubkey;
						include includes/node-card.pug
						
			div.row
				div.col-md-2
					div.form-group
						label(for="amount") Amount
						div.input-group
							input.form-control.form-control-lg.text-monospace(type="number" id="amount" name="amountSat" value=amountSat)
							div.input-group-append
								div.input-group-text.text-monospace sat

			button(type="submit", class="btn btn-primary") Send Payment

			