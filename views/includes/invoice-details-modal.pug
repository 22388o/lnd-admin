div.modal.fade(id=("invoiceModal-" + invoice_index) role="dialog" aria-hidden="true")
	div.modal-dialog.modal-xl(role="document")
		div.modal-content
			div.modal-header
				h5.modal-title.text-monospace Invoice
					br
					span #{Buffer.from(invoice.r_hash).toString("hex")}

				button.close(type="button" data-dismiss="modal" aria-label="Close")
					span(aria-hidden="true") &times;

			div.modal-body
				- var jsonX = invoice;
				- jsonX.r_preimage_base64 = Buffer.from(jsonX.r_preimage).toString("base64");
				- jsonX.r_preimage_hex = Buffer.from(jsonX.r_preimage).toString("hex");
				- jsonX.r_hash_base64 = Buffer.from(jsonX.r_hash).toString("base64");
				- jsonX.r_hash_hex = Buffer.from(jsonX.r_hash).toString("hex");

				- delete jsonX.r_preimage;
				- delete jsonX.r_hash;

				pre
					code.json.bg-light #{JSON.stringify(jsonX, null, 4)}

			div.modal-footer
				button.btn.btn-secondary(type="button" class="" data-dismiss="modal") Close
