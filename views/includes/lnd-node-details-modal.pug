div.modal.fade(id=("lndNodeDetailsModal-" + lndNodeIndex) role="dialog" aria-hidden="true")
	div.modal-dialog.modal-xl(role="document")
		div.modal-content
			div.modal-header
				h5.modal-title.text-monospace
					span LND Node ##{(lndNodeIndex + 1).toLocaleString()}
				button.close(type="button" data-dismiss="modal" aria-label="Close")
					span(aria-hidden="true") &times;

			div.modal-body
				pre
					code.json.bg-light #{JSON.stringify(lndNodeDetails, null, 4)}

			div.modal-footer
				button.btn.btn-secondary(type="button" class="" data-dismiss="modal") Close