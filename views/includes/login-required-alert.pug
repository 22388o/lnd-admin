div.alert.alert-primary.mb-0
	h3.h5.mb-3 Login Required

	if (loginRequiredFullNote)
		div.mb-3 #{loginRequiredFullNote}

	else if (loginRequiredNote)
		div.mb-3 If logged in as an admin this page will #{loginRequiredNote}

	else
		div.mb-3 You must be logged in as an admin to view this page.

	form(method="post", action="/login")
		div(class="form-group")
			label(for="password") Password
			input(type="password", class="form-control", id="password", name="password")

		button.btn.btn-primary(type="submit")
			i.fas.fa-sign-in-alt.mr-2
			span Login